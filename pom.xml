    <modelVersion>4.0.0</modelVersion>
    <groupId>org.glite.authz</groupId>
    <artifactId>argus-parent</artifactId>
    <name>Argus Authorization Service (EMI)</name>
    <version>1.3.0</version>
    <packaging>pom</packaging>

    <modules>
