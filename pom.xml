                <version>2.3.2</version>
            </dependency>
            <dependency>
                <groupId>org.herasaf.xacml</groupId>
                <artifactId>herasaf-xacml-core</artifactId>
                <version>0.12.0-SWITCH</version>
            </dependency>
            <dependency>
                <groupId>org.glite.security</groupId>
                <artifactId>trustmanager</artifactId>
                <version>2.5.5</version>
            </dependency>
            <dependency>
                <groupId>org.glite.security</groupId>
                <artifactId>util-java</artifactId>
                <version>2.9.2</version>
            </dependency>
            <dependency>
                <groupId>org.glite.voms</groupId>
                <artifactId>voms-api-java</artifactId>
                <version>1.9.18</version>
            </dependency>
            <dependency>
                <groupId>net.sf.ehcache</groupId>
                <artifactId>ehcache-core</artifactId>
                <version>1.7.2</version>
            </dependency>
            <dependency>
                <groupId>org.mortbay.jetty</groupId>
                <artifactId>jetty</artifactId>
                <version>${jetty.version}</version>
            </dependency>
            <dependency>
                <groupId>org.mortbay.jetty</groupId>
